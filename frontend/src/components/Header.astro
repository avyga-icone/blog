---
import Themeicone from "./Themeicone.astro";
import Logo from "./logo.astro"
---

<nav id="navbar" 
class="bg-white dark:bg-gray-800 z-40 border-b lg:border-transparent top-0 left-0 right-0 sticky lg:mt-4"
>
  <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
    <div class="relative flex h-16 items-center justify-between">
      <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
        <!-- Mobile menu button-->
        <button type="button"
        id="button-mobile-menu" 
        class="inline-flex items-center justify-center rounded-md p-2 text-gray-400focus:outline-none focus:ring-2  focus:ring-white"
        aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6 text-black dark:text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
          <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
        <a href="/" class="flex flex-shrink-0 items-center">
          <Logo className="block h-6 w-auto lg:hidden"/>
          <Logo className="hidden h-6 w-auto lg:block"/>
        </a>
        <div class="hidden sm:ml-6 sm:block">
          <div class="flex space-x-4 text-gray-700 dark:text-gray-100">

            <a href="#" class=" rounded-md px-3 py-2 text-sm font-medium hover:underline" aria-current="page">Articles</a>

            <a href="#" class=" rounded-md px-3 py-2 text-sm font-medium hover:underline">Team</a>

            <a href="#" class="rounded-md px-3 py-2 text-sm font-medium underline">Talk to us</a>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
       <Themeicone/>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <div class="hidden h-[90vh] overflow-y-hidden" id="mobile-menu" aria-status="close">
    <div class="space-y-1 px-2 pb-3 pt-2 text-gray-700 dark:text-gray-100">
      <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
      <a href="#" class="bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium" aria-current="page">Articles</a>

      <a href="#" class=" block rounded-md px-3 py-2 text-base font-medium hover:underline">Team</a>

      <a href="#" class="block rounded-md px-3 py-2 text-base font-medium underline">
        Talk to us
      </a>


    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById('navbar')
  document.addEventListener('scroll', function() {
    window.scrollY <= 100 ? navbar?.classList.remove('shadow') : navbar?.classList.add('shadow')
  })
  const button = document.getElementById("button-mobile-menu")
  
  button?.addEventListener('click', function(){
    const menu = document.getElementById("mobile-menu")
    if(menu?.getAttribute('aria-status') === 'close'){
      menu?.classList.add('!block')
      menu?.setAttribute('aria-status', 'open')
    }else{
      menu?.classList.remove('!block')
      menu?.setAttribute('aria-status', 'close')
    }
  })
</script>